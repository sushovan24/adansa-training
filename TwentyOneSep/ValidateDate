package TwentyOneSep;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;
import java.util.Scanner;

public class CheckDate {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String fromDate = "01/01/2015";
        String toDate = "03/01/2020";

        System.out.println("enter the date");
        String givenDate = sc.next();

        SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");

        try {
            Date fdate = sdf.parse(fromDate);
            Date tdate = sdf.parse(toDate);
            Date gdate = sdf.parse(givenDate);

            boolean bool1 = fdate.after(gdate);
            boolean bool2 = tdate.before(gdate);

            final String s1 = sdf.format(fdate);
            final String s2 = sdf.format(tdate);
            if (bool1 == bool2) {
                System.out.println("true");
            } else {
                System.out.println("Please enter date between " + s1 + " to " + s2);
            }
        } catch (ParseException ex) {
            System.out.println(ex);
        }
    }
}
